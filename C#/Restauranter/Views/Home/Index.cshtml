@model reviews
<br>
<form asp-action="" asp-controller="Home" method="post">
    <span asp-validation-for="name"></span> <br>
    Reviewer Name: 
    <input type="text" asp-for="name"> <br>

    <span asp-validation-for="restname"></span> <br>
    Restaurant Name:
    <input type="text" asp-for="restname"> <br>

    <span asp-validation-for="review"></span> <br>
    Review:
    <textarea asp-for="review"></textarea> <br>

    <span asp-validation-for="visittime"></span> <br>
    Date of Visit:
    <input type="date" asp-for="visittime"> <br>

    <span asp-validation-for="stars"></span> <br>
    Stars:
    <select asp-for="stars" >
        <option value="1">1</option>
        <option value="1">2</option>
        <option value="1">3</option>
        <option value="1">4</option>
    </select> <br>
    <input type="submit" value="Submit">
</form>